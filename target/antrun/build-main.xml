<?xml version="1.0" encoding="UTF-8" ?>
<project name="maven-antrun-" default="main"  >
<target name="main">
  <echo>Setting up plugin dependencies for rhq-sqlserver-plugin-4.4.0.jar...</echo>
  <property location="C:\Users\michael/.m2/repository" name="settings.localRepository"/>
  <mkdir dir="target/itest"/>
  <mkdir dir="target/itest/plugins"/>
  <mkdir dir="target/itest/lib"/>
  <copy flatten="true" toDir="target/itest/plugins">
    <fileset dir="${settings.localRepository}/">
      <include name="org/rhq/rhq-platform-plugin/4.4.0/rhq-platform-plugin-4.4.0.jar"/>
      <include name="org/rhq/rhq-database-plugin/4.4.0/rhq-database-plugin-4.4.0.jar"/>
    </fileset>
    <fileset dir="c:\Projects\einvoice\rhq-sqlserver-plugin\target">
      <include name="rhq-sqlserver-plugin-4.4.0.jar"/>
    </fileset>
  </copy>
  <unzip dest="target/itest/lib">
    <fileset dir="${settings.localRepository}/org/hyperic/sigar-dist/1.6.5.132" includes="*.zip"/>
    <patternset>
      <include name="**/lib/sigar.jar"/>
      <include name="**/lib/bcel*.jar"/>
      <include name="**/lib/*.so"/>
      <include name="**/lib/*.sl"/>
      <include name="**/lib/*.dll"/>
      <include name="**/lib/*.dylib"/>
    </patternset>
  </unzip>
  <move todir="target/itest/lib" flatten="true">
    <fileset dir="target/itest/lib">
      <include name="**/lib/*"/>
    </fileset>
  </move>
  <delete dir="target/itest/lib/hyperic-sigar-1.6.5.132"/>
</target>
</project>